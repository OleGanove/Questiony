<%= form_for @question do |f| %>
  <% if @question.errors.any? %>
  	<h2><%= pluralize(@question.errors.count, "error") %> prevented from saving</h2>
  	<ul>
  	  <% @question.errors.full_messages.each do |msg| %>
  	  	<li><%= msg %></li>
  	  <% end %>
  	</ul>
  <% end %>

  <%= f.label :question, "Question" %><br>
  <%= f.text_area :question %><br>

  <br>

  <%= f.submit :class => "button button_highlight" %>
<% end %>