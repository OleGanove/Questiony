<%= form_for :conversation, url: :conversations, html: { class: "" } do |f| %>
    <div class="form-group">
      <%= f.label :recipients, "An:" %>
      <%= f.select(:recipients, User.all.collect {|p| [ p.name, p.id ] }, {}, { multiple: true , class: "form-control" })%>
    </div>
    <div class="form-group">
      <%= f.label :subject, "Titel:" %>
      <%= f.text_field :subject, placeholder: "Thema", class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :message, "Nachricht" %>
      <%= f.text_area :body, class: 'form-control',placeholder: "Schreibe deine Nachricht hier hin", rows: 4  %>
    </div>

    <%= f.submit "Senden", class: "btn btn-success" %>

<% end %>