<% @receipts.each do |receipt| %>
    <% message = receipt.message %>
    <div class="media">
      <div class="media-left">
        <!-- user avators can go here -->
        <%= link_to image_tag(message.sender.avatar.url(:friend), class: "circular"), "#" %> 
      </div>
      <div class="media-body">
        <h4 class="media-heading">
          <%= message.sender.name %> <br>
          <small><b>Titel: </b><%= message.subject %></small><br>
          <small><b>Datum: </b><%=  message.created_at.strftime("%d.%m.%Y, um %H:%M Uhr") %></small>
        </h4>
        <%= message.body %>
      </div>
    </div>
<% end %>