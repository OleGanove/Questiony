<div class="media">
  <div class="media-left">
    <%= link_to image_tag(conversation.originator.avatar.url(:friend), class: "circular"), conversation.originator %> 
  </div>
  <div class="media-body">
    <h4 class="media-heading">
      <%= conversation.originator.name %> <br>
      <small><b>Titel: </b><%= conversation.subject %></small><br>
      <small><b>Datum: </b><%=  conversation.messages.last.created_at.strftime("%d.%m.%Y, um %H:%M Uhr") %></small>
    </h4>
    <%= truncate conversation.messages.last.body, length: 145 %>
    <%= link_to "ansehen", conversation_path(conversation)  %>
  </div>
</div>